{{#section 'script'}}
    <script type="text/javascript" src="/js/plugins/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/js/plugins/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
    var table=$('#sampleTable').dataTable({
      processing : true,
      serverSide : true,
      order: [[ 3, 'desc' ]],
      ajax : { url: '/admins/compliants' },
      initComplete: function () {
       this.api().columns([2,3]).every( function () {
                    var column = this;
                    var select = $('<select><option value="">Select Option</option></select>')
                        .appendTo( $(column.footer()).empty() )
                        .on( 'change', function () {
                            var val = $.fn.dataTable.util.escapeRegex(
                                $(this).val()
                            );

                        column
                            .search( val ? '^'+val+'$' : '', true, false )
                            .draw();
                    } );

                column.data().unique().sort().each( function ( d, j ) {
                   select.append( '<option value="'+d+'">'+d+'</option>' )
                } );
                } );
    },
      columns : [
          {'data': 'report_user_id.name'},
          {'data': 'user_id.name'},
          {'data': 'type'},
          {'data': 'date'},
          {'data': 'status'},
          {'data': 'button'}
      ]
    });
    // $('#sampleTable tfoot tr').insertAfter($('#sampleTable thead tr'))
    $('#sampleTable tfoot tr').insertBefore($('#sampleTable thead tr'));
    </script>
      <script type="text/javascript">
        $(document).on('click','.userclick',function(e) {
          var ev=$(this);
          e.preventDefault();
          var id=$(this).data('id');
          var status=$(this).attr('rel');
            $.ajax({
             url:"/admins/compliant-status/"+id+'/'+status,
             type:'POST',
             success:function(resp) {
               $(ev).text(resp.status);
               $(ev).attr('rel',resp.status);
             }
          })
        })
      </script>
      <script type="text/javascript">
        $(document).on('click','.qdelete',function(e) {
          var ev=$(this);
          e.preventDefault();
          var id=$(this).data('id');
            $.ajax({
             url:"/admins/compliant-delete/"+id,
             type:'POST',
             success:function(resp) {
              if (resp.status='success') {
                $(ev).closest('tr').hide();
              }
             }
          })
        })
      </script>
      <script type="text/javascript">
        $(document).on('click','.block',function(e) {
