          var status=$(this).attr('rel');
            $.ajax({
             url:"/admins/compliant-block/"+id+'/'+status,
             type:'POST',
             success:function(resp) {
               $(ev).text(resp.status);
               $(ev).attr('rel',resp.status);
             }
          })
        })
      </script>
